{
  "name": "nest-toolkit",
  "version": "1.0.1",
  "description": "NestJS useful toolkit",
  "author": "Mostafa Gholami <mostafagholamidev@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "toolkit",
    "decorators",
    "guards",
    "prisma",
    "swagger",
    "request-context"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mst-ghi/nestjs-toolkit"
  },
  "bugs": "https://github.com/mst-ghi/nestjs-toolkit",
  "dependencies": {
    "@nestjs/microservices": "^9.0.11",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/swagger": "^6.0.4",
    "@prisma/client": "^4.1.0",
    "compression": "^1.7.4",
    "dayjs": "^1.11.5",
    "helmet": "^5.1.1",
    "js-sha3": "^0.8.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "rxjs": "^7.5.6",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@nestjs/common": "^9.0.5",
    "@nestjs/core": "^9.0.5",
    "@nestjs/platform-express": "^9.0.5",
    "@nestjs/testing": "9.0.5",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/node": "18.6.1",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "2.0.12",
    "jest": "28.1.3",
    "prettier": "2.7.1",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "tsc-watch": "5.0.3",
    "tsconfig-paths": "4.0.0",
    "tslint": "6.1.3",
    "typescript": "4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
